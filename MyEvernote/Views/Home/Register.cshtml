                @Html.ValidationSummary(false)// validation mesajlarını göstermek için kullandık.
                <div class="form-group">
                    <span class="glyphicon glyphicon-user"></span>

                    <label for="username" class="text-white">Kullanıcı Adı:</label><br>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı" })
                </div>
                <div class="form-group">
                    <span class="glyphicon glyphicon-lock"></span>

                    <label for="password" class="text-white">Şifre:</label><br>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })

                </div>
                <div class="form-group">
                    <span class="glyphicon glyphicon-lock"></span>

                    <label for="repassword" class="text-white">ŞifreTekrar:</label><br>
                    @Html.TextBoxFor(m => m.Repassword, new { @class = "form-control", placeholder = "Şifreniz Tekrar", type = "password" })

                </div>
                <div class="form-group">
                    <span class="glyphicon glyphicon-envelope"></span>
                    <label for="mail" class="text-white">Mail:</label><br>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Emai" })

                </div>

                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Kaydet">
